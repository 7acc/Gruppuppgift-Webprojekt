@model IEnumerable<ViewModels.VyModels.ApartmentViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lediga lägenheter</h2>
@* Search starts here *@
<div class=".col-md-12 search">


</div>

<p>
    @Html.ActionLink("Lediga just nu", "")
</p>
<table class="table">
    <tr>
        <th>Image</th>
        <th>ApartmentSize & Adress</th>
        <th>Info About Apartment</th>
        <th>Mer info</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApartImgId)
        </td>
        <td>
            <p style="font-size: 12px">@Html.DisplayFor(modelItem => item.SizeId)</p> 
            <p style="font-size: 18px; font-weight: bold;">@Html.DisplayFor(modelItem => item.Address)</p>
        </td>
        <td>
            <b>Formhousing:</b> @Html.DisplayFor(modelItem => item.FormHId)<br />
            <b>Area:</b> @Html.DisplayFor(modelItem => item.AreaId)<br />
            <b>Floor:</b> @Html.DisplayFor(modelItem => item.Floor)<br />
            <b>Apartments Area:</b> @Html.DisplayFor(modelItem => item.ApartArea)<br />
            <b>Rental:</b> @Html.DisplayFor(modelItem => item.Price)<br />
            <b>Available:</b> @Html.DisplayFor(modelItem => item.Available) <br /> 
        </td>
        <td>
            <br  /><br />
            <button class="btn btn-info" type="button"
                    onclick="location.href='@Url.Action("Details", "Home", new { id=item.Id })'">Mer info om lägenheten</button>
                    @*@Html.ActionLink("Mer om lägenheten", "Details", new { id = item.Id })*@
</td>
    </tr>  
}

</table>
